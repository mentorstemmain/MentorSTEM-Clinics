window = tk.Tk()
window.geometry("800x500")
window.title("Adventure Game")
title = tk.Label(window, text="Adventure Game!", font=('Times New Roman', 30))
title.pack(padx=20, pady=20)
label = tk.Label(window, text="This is an adventure game! See where you journey will go.", font=('Helvetica', 10))
label.pack()
button = tk.Button(window, text="Start!", font=('Arial', 20), command=gameScreen)
button.pack(pady=30)


window.mainloop()

