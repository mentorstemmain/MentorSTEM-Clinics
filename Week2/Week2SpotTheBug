playerType = input("What is the player type (Wizard, Swordsman, etc.)?")
DEFAULT_HEALTH = 100
playerHealth = input("How much health, out of 100 points, does the player have?")

if(playerHealth < 0):
    print("Not valid!")
elif(playerHealth == 100):
    print("Wow! Super health!")

print(playerType + " has " + playerHealth + "/" + DEFAULT_HEALTH + " health points.")
